@model LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Đăng nhập";
}
<div class="login-box">
    <div class="card card-outline card-primary bg-dark">
        <div class="card-header text-center">
            <a href="/dang-nhap" class="h1"><b>Sps</b></a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Hệ thống phân tích dữ liệu chứng khoán</p>
            <form id="user-login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row" style="display:none">
                    <div class="col-12">
                        <div class="icheck-primary">
                            <input type="checkbox" asp-for="RememberMe">
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>
                </div>
                <div class="social-auth-links text-center mt-2 mb-3">
                    <button type="submit" class="btn btn-block btn-primary">
                        <i class="fas fa-sign-in-alt mr-2"></i> Đăng nhập
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>